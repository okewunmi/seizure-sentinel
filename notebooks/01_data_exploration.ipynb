# ==================== SECTION 3: EEG Signal Visualization ====================
print("\nüìà SECTION 3: EEG Signal Visualization")
print("-" * 70)

# Load one patient's data
patient_id = 'chb01'
print(f"Loading data from {patient_id}...")

# Get first file with a seizure
seizures = loader.load_seizure_annotations(patient_id)
if seizures:
    first_seizure = seizures[0]
    print(f"\nFirst seizure in {first_seizure.file_name}:")
    print(f"  Start: {first_seizure.start_time:.1f}s")
    print(f"  End: {first_seizure.end_time:.1f}s")
    print(f"  Duration: {first_seizure.duration:.1f}s")
    
    # Load the EDF file
    file_path = Path(f'../data/raw/chb-mit/{patient_id}/{first_seizure.file_name}')
    signals, metadata = loader.load_edf_file(file_path)
    
    print(f"\nEEG Signal Properties:")
    print(f"  Shape: {signals.shape}")
    print(f"  Channels: {metadata['n_channels']}")
    print(f"  Sampling rate: {metadata['sampling_rate']} Hz")
    print(f"  Duration: {metadata['duration']:.1f} seconds")
    
    # Visualize normal vs seizure EEG
    sampling_rate = int(metadata['sampling_rate'])
    
    # Extract 10-second windows
    pre_seizure_start = int((first_seizure.start_time - 10) * sampling_rate)
    pre_seizure_end = int(first_seizure.start_time * sampling_rate)
    
    ictal_start = int(first_seizure.start_time * sampling_rate)
    ictal_end = int((first_seizure.start_time + 10) * sampling_rate)
    
    normal_eeg = signals[:, pre_seizure_start:pre_seizure_end]
    seizure_eeg = signals[:, ictal_start:ictal_end]
    
    # Plot comparison
    fig, axes = plt.subplots(2, 1, figsize=(15, 10))
    
    # Normal EEG
    time_normal = np.arange(normal_eeg.shape[1]) / sampling_rate
    for ch in range(min(8, normal_eeg.shape[0])):  # Plot first 8 channels
        axes[0].plot(time_normal, normal_eeg[ch, :] + ch*200, linewidth=0.5, alpha=0.8)
    
    axes[0].set_ylabel('Channel + Offset (¬µV)')
    axes[0].set_title(f'Normal EEG (10s before seizure) - {patient_id}')
    axes[0].set_xlim([0, 10])
    axes[0].grid(alpha=0.3)
    
    # Seizure EEG
    time_seizure = np.arange(seizure_eeg.shape[1]) / sampling_rate
    for ch in range(min(8, seizure_eeg.shape[0])):
        axes[1].plot(time_seizure, seizure_eeg[ch, :] + ch*200, linewidth=0.5, alpha=0.8, color='red')
    
    axes[1].set_xlabel('Time (seconds)')
    axes[1].set_ylabel('Channel + Offset (¬µV)')
    axes[1].set_title(f'Seizure EEG (during ictal period) - {patient_id}')
    axes[1].set_xlim([0, 10])
    axes[1].grid(alpha=0.3)
    
    plt.tight_layout()
    plt.savefig('../results/eeg_comparison.png', dpi=300)
    plt.show()
    
    print("\n‚úì Notice the difference:")
    print("  - Normal EEG: Relatively low amplitude, regular patterns")
    print("  - Seizure EEG: High amplitude, synchronized oscillations")

# ==================== SECTION 4: Preprocessing Effects ====================
print("\nüîß SECTION 4: Preprocessing Pipeline")
print("-" * 70)

if seizures:
    # Take a 5-second window
    window_start = int(first_seizure.start_time * sampling_rate)
    window_end = window_start + (5 * sampling_rate)
    raw_window = signals[:, window_start:window_end]
    
    # Initialize preprocessor
    preprocessor = EEGPreprocessor(sampling_rate=sampling_rate)
    
    # Apply preprocessing steps
    print("Applying preprocessing steps...")
    
    # 1. Bandpass filter
    filtered = preprocessor.bandpass_filter(raw_window)
    
    # 2. Notch filter
    notched = preprocessor.notch_filter(filtered)
    
    # 3. Normalize
    normalized = preprocessor.normalize(notched)
    
    # Visualize preprocessing effects (single channel)
    channel_idx = 0
    time = np.arange(raw_window.shape[1]) / sampling_rate
    
    fig, axes = plt.subplots(4, 1, figsize=(15, 12))
    
    axes[0].plot(time, raw_window[channel_idx], linewidth=0.5)
    axes[0].set_title('1. Raw EEG Signal')
    axes[0].set_ylabel('Amplitude (¬µV)')
    axes[0].grid(alpha=0.3)
    
    axes[1].plot(time, filtered[channel_idx], linewidth=0.5, color='orange')
    axes[1].set_title('2. After Bandpass Filter (0.5-50 Hz)')
    axes[1].set_ylabel('Amplitude (¬µV)')
    axes[1].grid(alpha=0.3)
    
    axes[2].plot(time, notched[channel_idx], linewidth=0.5, color='green')
    axes[2].set_title('3. After Notch Filter (60 Hz removal)')
    axes[2].set_ylabel('Amplitude (¬µV)')
    axes[2].grid(alpha=0.3)
    
    axes[3].plot(time, normalized[channel_idx], linewidth=0.5, color='purple')
    axes[3].set_title('4. After Normalization (z-score)')
    axes[3].set_ylabel('Normalized Amplitude')
    axes[3].set_xlabel('Time (seconds)')
    axes[3].grid(alpha=0.3)
    
    plt.tight_layout()
    plt.savefig('../results/preprocessing_steps.png', dpi=300)
    plt.show()
    
    print("‚úì Preprocessing complete!")
    print("  - Removed DC drift and high-frequency noise")
    print("  - Eliminated power line interference (60 Hz)")
    print("  - Normalized to zero mean, unit variance")

# ==================== SECTION 5: Spectrogram Analysis ====================
print("\nüé® SECTION 5: Time-Frequency Analysis")
print("-" * 70)

if seizures:
    # Compute spectrogram
    f, t, Sxx = preprocessor.extract_spectrogram(normalized[:1])  # Single channel
    
    # Plot spectrogram
    plt.figure(figsize=(15, 6))
    
    plt.subplot(2, 1, 1)
    plt.plot(time, normalized[channel_idx], linewidth=0.5)
    plt.ylabel('Amplitude')
    plt.title(f'EEG Signal - Channel {channel_idx}')
    plt.xlim([0, 5])
    plt.grid(alpha=0.3)
    
    plt.subplot(2, 1, 2)
    plt.pcolormesh(t, f, 10 * np.log10(Sxx[0]), shading='gouraud', cmap='viridis')
    plt.ylabel('Frequency (Hz)')
    plt.xlabel('Time (seconds)')
    plt.title('Spectrogram (Power Spectral Density)')
    plt.colorbar(label='Power (dB)')
    plt.ylim([0, 50])  # Focus on relevant frequencies
    
    plt.tight_layout()
    plt.savefig('../results/spectrogram_analysis.png', dpi=300)
    plt.show()
    
    print("‚úì Spectrogram shows:")
    print("  - Frequency content over time")
    print("  - Seizures often show increased power in specific bands")
    print("  - Delta (0.5-4 Hz), Theta (4-8 Hz), Alpha (8-13 Hz), etc.")

